extends: default

ignore: |
  **/*.sops.yaml
  **/sops-secrets/*.yaml

rules:
  braces: disable
  brackets: disable
  comments: disable
  comments-indentation: disable
  document-start: disable
  empty-lines: disable
  hyphens: disable
  indentation: disable
  line-length:
    max: 200
    level: warning
  trailing-spaces: disable
  truthy: disable
  commas: disable
