extends: default
ignore: |
  **/sops-secrets/**
  **/.venv*/**
rules:
  document-start: disable
  indentation:
    level: warning
  line-length:
    max: 200
    level: warning
    allow-non-breakable-words: true
  braces: disable
  truthy: disable
  comments-indentation: disable
  empty-lines:
    max: 1
  commas: disable
