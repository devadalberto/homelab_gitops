# Homelab GitOps Environment Template
# Populate these values and copy to .env before bootstrapping the cluster.

# -----------------------------------------------------------------------------
# Domain & Ingress Hostnames
# -----------------------------------------------------------------------------
LABZ_DOMAIN=REPLACE_ME.home.arpa
LAB_DOMAIN_BASE=${LAB_DOMAIN_BASE:-${LABZ_DOMAIN}}
LABZ_TRAEFIK_HOST=traefik.${LABZ_DOMAIN}
LABZ_NEXTCLOUD_HOST=cloud.${LABZ_DOMAIN}
LABZ_JELLYFIN_HOST=media.${LABZ_DOMAIN}
# Add additional ingress hosts as needed, e.g.
# LABZ_GITEA_HOST=git.${LABZ_DOMAIN}

# -----------------------------------------------------------------------------
# Cluster Sizing & Tunables
# -----------------------------------------------------------------------------
LABZ_MINIKUBE_PROFILE=labz
LABZ_MINIKUBE_CPUS=4
LABZ_MINIKUBE_MEMORY=12288
LABZ_MINIKUBE_DISK=80g
LABZ_MINIKUBE_DRIVER=docker
LABZ_KUBERNETES_VERSION=v1.31.3

# -----------------------------------------------------------------------------
# Networking & MetalLB
# -----------------------------------------------------------------------------
LAN_CIDR=REPLACE_ME_CIDR
LAN_GW_IP=REPLACE_ME_GATEWAY
DHCP_FROM=REPLACE_ME_DHCP_START
DHCP_TO=REPLACE_ME_DHCP_END
LABZ_METALLB_RANGE=REPLACE_ME_IP_START-REPLACE_ME_IP_END
METALLB_POOL_START=REPLACE_ME_IP_START
METALLB_POOL_END=REPLACE_ME_IP_END
TRAEFIK_LOCAL_IP=REPLACE_ME_TRAEFIK_IP
METALLB_HELM_VERSION=0.14.7
TRAEFIK_HELM_VERSION=27.0.2
CERT_MANAGER_HELM_VERSION=1.16.3
LABZ_POSTGRES_HELM_VERSION=16.2.6
LABZ_KPS_HELM_VERSION=65.5.0

# -----------------------------------------------------------------------------
# Application Credentials & Tunables
# -----------------------------------------------------------------------------
LABZ_POSTGRES_DB=nextcloud
LABZ_POSTGRES_USER=nextcloud
LABZ_POSTGRES_PASSWORD=REPLACE_ME
LABZ_REDIS_PASSWORD=REPLACE_ME
LABZ_PHP_UPLOAD_LIMIT=2G
AWX_ADMIN_USER=REPLACE_ME
DJ_IMAGE=djangomultiproject:latest

# -----------------------------------------------------------------------------
# Host Mount Paths
# -----------------------------------------------------------------------------
LABZ_MOUNT_BACKUPS=/srv/backups
LABZ_MOUNT_MEDIA=/srv/media
LABZ_MOUNT_NEXTCLOUD=/srv/nextcloud
WORK_ROOT=/opt/homelab
PG_BACKUP_HOSTPATH=/opt/homelab/backups

# -----------------------------------------------------------------------------
# Storage Sizing
# -----------------------------------------------------------------------------
PG_STORAGE_SIZE=10Gi

